@page "/Employees"

@using Northwind.Blazor.ViewModels 
@using Northwind.Data.Services 

@inject AutoMapper.IMapper _mapper
@inject IEmployeeService _employeeService

<h1>Employees</h1>

@if (employees == null)
{
    <LoadingPlaceholder />
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Job Title</th>
                <th>Hire Date</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in employees)
            {
                <tr>
                    <td>@emp.EmployeeId</td>
                    <td>@emp.FullName</td>
                    <td>@emp.Title</td>
                    <td>@(emp.HireDate?.ToString("dd/MM/yyyy"))</td>
                    <td>
                        <NavLink class="pr-2" href="@("Employees/View/" + emp.EmployeeId)">
                            <span class="oi oi-eye"></span>
                        </NavLink>
                        <NavLink href="@("Employees/Edit/" + emp.EmployeeId)">
                            <span class="oi oi-pencil"></span>
                        </NavLink>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<EmployeeViewModel> employees;

    protected override async Task OnInitializedAsync()
    {
        var employeeModels = await _employeeService.GetAllAsync();

        employees = _mapper.Map<IEnumerable<EmployeeViewModel>>(employeeModels);
    }
}