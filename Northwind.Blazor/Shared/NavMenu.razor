<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Northwind</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home"></span> Home
            </NavLink>
            <NavLink class="nav-link" href="Employees" Match="NavLinkMatch.All">
                <span class="oi oi-briefcase"></span> Employees
            </NavLink>
            <NavLink class="nav-link" href="Customers" Match="NavLinkMatch.All">
                <span class="oi oi-people"></span> Customers
            </NavLink>
            <NavLink class="nav-link" href="Orders" Match="NavLinkMatch.All">
                <span class="oi oi-dollar"></span> Orders
            </NavLink>
            <NavLink class="nav-link" href="Products" Match="NavLinkMatch.All">
                <span class="oi oi-spreadsheet"></span> Products
            </NavLink>
            <NavLink class="nav-link" href="Categories" Match="NavLinkMatch.All">
                <span class="oi oi-folder"></span> Categories
            </NavLink>
            <NavLink class="nav-link" href="Shippers" Match="NavLinkMatch.All">
                <span class="oi oi-box"></span> Shippers
            </NavLink>
            <NavLink class="nav-link" href="Suppliers" Match="NavLinkMatch.All">
                <span class="oi oi-credit-card"></span> Suppliers
            </NavLink>
            <NavLink class="nav-link" href="Regions" Match="NavLinkMatch.All">
                <span class="oi oi-map"></span> Regions
            </NavLink>
            <NavLink class="nav-link" href="Territories" Match="NavLinkMatch.All">
                <span class="oi oi-map-marker"></span> Territories
            </NavLink>

            <hr />

            <AuthorizeView>
                <Authorized>
                    <a href="Identity/Account/Manage">@context.User.Identity.Name</a>
                    <form method="post" action="Identity/Account/LogOut">
                        <button type="submit" class="nav-link btn btn-link">Log out</button>
                    </form>
                </Authorized>
                <NotAuthorized>
                    @*<a href="Identity/Account/Register">Register</a>*@
                    <NavLink class="nav-link" href="Identity/Account/Login" Match="NavLinkMatch.All">
                        <span class="oi oi-account-login"></span> Log in
                    </NavLink>
                </NotAuthorized>
            </AuthorizeView>


        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
